   "source": [
    "label = open(r\"D:\\ocr_rodrigo\\text\\transcriptions.txt\", \"r\", encoding=\"utf-8\")\n",
    "labels = label.read()\n",
    "label.close()\n",
    "\n",
    "labels = labels.split(\"\\n\")\n",
    "\n",
    "if labels[-1] == '':\n",
    "    labels.pop()\n",
    "\n",
    "labels_dict = dict()\n",
    "for label in labels:\n",
    "    a = label.split(maxsplit=1)\n",
    "    labels_dict[a[0]] = a[1]"
   ]
