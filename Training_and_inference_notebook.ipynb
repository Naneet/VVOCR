   "source": [
    "c = 0\n",
    "w = 0\n",
    "model.eval()\n",
    "with torch.inference_mode():\n",
    "    for img, _, y in tqdm(valid_dataloader):\n",
    "        y_output = model(img.to(device), torch.ones((img.size(0), 1), dtype=torch.long).to(device))\n",
    "        c += cer(decode_token(y), decode_token(y_output))\n",
    "        w += wer(decode_token(y), decode_token(y_output))\n",
