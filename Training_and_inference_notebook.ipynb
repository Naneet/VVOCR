   "source": [
    "class OCRDataset(Dataset):\n",
    "    def __init__(self, images, transform, labels=labels_dict, path=r\"D:\\ocr_rodrigo\\images\", char_to_idx=char_to_idx):\n",
    "        self.images = images\n",
    "        self.labels = labels_dict\n",
    "        self.path = path\n",
    "        self.transform = transform\n",
    "        self.char_to_idx = char_to_idx\n",
    "\n",
    "    def __len__(self):\n",
    "        return len(self.images)\n",
    "\n",
    "    def __getitem__(self, idx):\n",
    "        image = self.images[idx]\n",
    "        label = self.labels[image]\n",
    "        image = Image.open(os.path.join(self.path, image+\".png\"))\n",
    "        image = self.transform(image)\n",
    "        label_list = []\n",
    "        for char in label:\n",
    "            label_list.append(self.char_to_idx[char])\n",
    "\n",
    "        tensor_label = torch.tensor(label_list)\n",
    "\n",
    "        return image, tensor_label"
   ]
  },
  {
   "cell_type": "code",
