   "metadata": {},
   "outputs": [],
   "source": [
    "sentences = list(labels_dict.values())\n",
    "idx_to_char, char_to_idx = [\"<pad>\", \"<sos>\", \"<eos>\"], {\"<pad>\":0, \"<sos>\":1, \"<eos>\":2}\n",
    "\n",
    "for sentence in sentences:\n",
    "    for char in sentence:\n",
    "        if char not in idx_to_char:\n",
    "            idx_to_char.append(char)\n",
    "            char_to_idx[char] = len(idx_to_char)-1"
   ]
