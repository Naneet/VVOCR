   "source": [
    "train = open(r\"D:\\ocr_rodrigo\\partitions\\train.txt\", \"r\")\n",
    "test = open(r\"D:\\ocr_rodrigo\\partitions\\test.txt\", \"r\")\n",
    "valid = open(r\"D:\\ocr_rodrigo\\partitions\\validation.txt\", \"r\")\n",
    "\n",
    "train_images = train.read()\n",
    "test_images = test.read()\n",
    "valid_images = valid.read()\n",
    "\n",
    "train.close()\n",
    "test.close()\n",
    "valid.close()\n",
    "\n",
    "train_images = train_images.split(\"\\n\")\n",
    "test_images = test_images.split(\"\\n\")\n",
    "valid_images = valid_images.split(\"\\n\")\n",
    "\n",
    "if train_images[-1] == '':\n",
    "    train_images.pop()\n",
    "\n",
    "if test_images[-1] == '':\n",
    "    test_images.pop()\n",
    "\n",
    "if valid_images[-1] == '':\n",
    "    valid_images.pop()\n",
    "\n",
    "train_images.extend(test_images[:int(len(test_images)*0.9)])\n",
    "valid_images.extend(test_images[int(len(test_images)*0.9):])\n",
    "\n",
    "len(train_images), len(valid_images)"
   ]
