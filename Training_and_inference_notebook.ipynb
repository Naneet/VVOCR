    "class VV_OCR(nn.Module):\n",
    "    def __init__(self, vocab_size, d_model=1024, nhead=16, num_decoder_layers=8, dim_feedforward=4096, dropout=0.3, batch_first=True,\n",
    "                 pad_token=0, sos_token=1, eos_token=2, max_seq_len=512):\n",
    "\n",
    "        super(VV_OCR, self).__init__()\n",
    "\n",
    "        self.conv = nn.Conv2d(in_channels=1, out_channels=3, kernel_size=(1,1))\n",
    "\n",
    "        self.vit = ViTModel.from_pretrained('google/vit-large-patch32-384')\n",
    "        self.pos_embedding = nn.Parameter(torch.randn(1, max_seq_len, d_model))\n",
    "\n",
    "        decoder_layer = nn.TransformerDecoderLayer(d_model=d_model, nhead=nhead, dim_feedforward=dim_feedforward, dropout=dropout, batch_first=batch_first)\n",
    "        self.decoder = nn.TransformerDecoder(decoder_layer, num_layers=num_decoder_layers)\n",
    "\n",
    "        self.pad_token = pad_token\n",
    "        self.sos_token = sos_token\n",
    "        self.eos_token = eos_token\n",
    "        self.max_seq_len = max_seq_len\n",
    "\n",
    "        self.embedding = nn.Embedding(vocab_size, d_model, padding_idx=pad_token)\n",
    "\n",
    "        self.fc_out = nn.Linear(d_model, vocab_size)\n",
    "\n",
    "\n",
    "    def forward(self, img, tgt_tokens):\n",
    "\n",
    "        encoded_output = self.vit(self.conv(img)).last_hidden_state\n",
    "\n",
    "        if tgt_tokens.shape[1] == 1:\n",
    "            finished = torch.zeros(tgt_tokens.size(0), dtype=torch.bool, device=tgt_tokens.device)\n",
    "            for i in range(self.max_seq_len-1):\n",
    "                tgt_embedded = self.embedding(tgt_tokens)\n",
    "                tgt_embedded = tgt_embedded + self.pos_embedding[:, :tgt_embedded.size(1), :]\n",
    "                tgt_seq_len = tgt_embedded.shape[1]\n",
    "                tgt_mask = nn.Transformer.generate_square_subsequent_mask(tgt_seq_len).to(tgt_embedded.device)\n",
    "                tgt_key_padding_mask = (tgt_tokens == self.pad_token)\n",
    "                decoded_output = self.decoder(tgt_embedded, encoded_output, tgt_mask=tgt_mask, tgt_key_padding_mask=tgt_key_padding_mask)\n",
    "                logit = self.fc_out(decoded_output)\n",
    "                last_output_token = logit[:,-1,:].argmax(1).unsqueeze(1)\n",
    "                finished |= (last_output_token.view(-1) != self.eos_token)\n",
    "                tgt_tokens = torch.cat([tgt_tokens, last_output_token], dim=1)\n",
    "\n",
    "                if finished.all():\n",
    "                    return tgt_tokens\n",
    "                \n",
    "            else:\n",
    "                tgt_tokens = torch.cat([tgt_tokens, torch.tensor([[self.eos_token]]).to(tgt_tokens.device)], dim=1)\n",
    "                return tgt_tokens\n",
    "\n",
    "\n",
    "        else:\n
    "            tgt_embedded = self.embedding(tgt_tokens)\n",
    "            tgt_embedded = tgt_embedded + self.pos_embedding[:, :tgt_embedded.size(1), :]\n",
    "\n",
    "            tgt_seq_len = tgt_embedded.shape[1]\n",
    "            tgt_mask = nn.Transformer.generate_square_subsequent_mask(tgt_seq_len).to(tgt_embedded.device)\n",
    "\n",
    "            tgt_key_padding_mask = (tgt_tokens != self.pad_token)\n",
    "\n",
    "            decoded_output = self.decoder(tgt_embedded, encoded_output, tgt_mask=tgt_mask, tgt_key_padding_mask=tgt_key_padding_mask)\n",
    "\n",
    "            logit = self.fc_out(decoded_output)\n",
    "\n",
    "            return logit"
   ]
